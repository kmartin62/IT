@model MVCLab5._1.Models.AddUser
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>AddUserToRole</h2>

@using (Html.BeginForm("AddUserToRole", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.Roles), new { @class = "form-control"})
    </div>

    <button class="btn btn-default", type="submit">Save</button>
}

